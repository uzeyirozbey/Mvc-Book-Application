@model List<KitapTuru>
@if(TempData["basarili"] != null)
{
    <h2 style="color:green;"> @TempData["basarili"]</h2>
}
<style>
    .btnIslem {
        width :150px;
    }
</style>
<div class="container">
    <div class="row pt-3 pb-4">
        <div> 
            <h1> Kitap Türleri</h1>
        </div>
    </div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th> Id</th>
            <th> Kitap Türü</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var kitapTuru in Model)
        {
              <tr>
                  <td>@kitapTuru.Id </td>
                  <td>@kitapTuru.Ad </td>
                  <td><a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" class="btn btn-sm btn-success btnIslem"> Düzenle </a> </td>
                  <td><a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" class="btn btn-sm btn-danger btnIslem"> Sil </a> </td>
              </tr>
        }
    </tbody>
</table>
 <div class="row pt-3 pb-2">
     <div>
         <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-sm btn-primary" type="button"> 
         Yeni Kitap Türü Oluştur    
         </a>
     </div>
</div>

</div>
